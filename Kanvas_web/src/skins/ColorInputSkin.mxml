<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="components.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("components.palette.ColorInput")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			
			import knowledgeMapEditor.controlIcons.*;
		]]>
	</fx:Script>
	
	<s:BitmapImage source="{input_bg}" width="100%" height="100%" />
	
	<!-- SkinParts
	name=valueInput, type=spark.components.TextInput, required=true
	name=submitBtn, type=spark.components.Button, required=true
	-->
	<s:HGroup gap="3" width="100%" top="3" bottom="3" left="5" right="5">
		<s:TextInput id="valueInput" width="100%" contentBackgroundAlpha="0" focusAlpha="0" borderVisible="false" />
		<components:IconButton id="submitBtn" image="{color_input_yes}" overImage="{color_input_yes_over}" />
		<!--<components:IconButton id="cancelBtn" image="{color_input_no}" overImage="{color_input_no_over}" />-->
	</s:HGroup>
</s:Skin>
